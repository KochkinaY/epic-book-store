mixin mini-card(name, url, imgUrl, descr, price)
  article.mini-card
    a.mini-card__inner(href=url)
      img.mini-card__pict(src=imgUrl, alt=name, width=280, height=394)
      h3.mini-card__title= name
      if descr
        p.mini-card__descr= descr
      if price
        p.mini-card__price= price


mixin invitation()
  section.invitation
    div.invitation__inner
      h3.invitation__title Мы открыли для вас уютную библиотеку
      p.invitation__descr Приходите к нам по адресу Никитинская 10, каждый день с 12:00 до 18:00


